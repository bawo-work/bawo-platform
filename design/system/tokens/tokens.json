{
  "$schema": "https://design-tokens.org/schema.json",
  "$description": "Bawo Design System - Unified Tokens",
  "$version": "1.0.0",

  "color": {
    "neutral": {
      "warmWhite": { "$value": "#FEFDFB" },
      "cream": { "$value": "#FAF7F2" },
      "sand": { "$value": "#F0EBE3" },
      "warmGray400": { "$value": "#A39E94" },
      "warmGray600": { "$value": "#6B665C" },
      "warmGray800": { "$value": "#3D3935" },
      "warmBlack": { "$value": "#2C2925" },
      "white": { "$value": "#FFFFFF" }
    },
    "primary": {
      "50": { "$value": "#E8F5F4" },
      "100": { "$value": "#C7E6E4" },
      "300": { "$value": "#5DACA6" },
      "500": { "$value": "#2D8A83" },
      "600": { "$value": "#1A7068" },
      "700": { "$value": "#1A5F5A" },
      "800": { "$value": "#164D49" },
      "900": { "$value": "#0F3633" }
    },
    "secondary": {
      "50": { "$value": "#FDF3EF" },
      "100": { "$value": "#F9DED4" },
      "300": { "$value": "#E49A7C" },
      "500": { "$value": "#C45D3A" },
      "600": { "$value": "#A84E31" },
      "700": { "$value": "#8B3F26" }
    },
    "semantic": {
      "success": { "$value": "#2D8A3D" },
      "successLight": { "$value": "#E6F5E8" },
      "warning": { "$value": "#C4883A" },
      "warningLight": { "$value": "#FDF5E6" },
      "error": { "$value": "#C43A3A" },
      "errorLight": { "$value": "#FDE8E8" },
      "info": { "$value": "#2D6B8A" },
      "infoLight": { "$value": "#E6F0F5" }
    },
    "money": {
      "gold": { "$value": "#C4A23A" },
      "goldLight": { "$value": "#FDF8E6" }
    }
  },

  "typography": {
    "fontFamily": {
      "primary": { "$value": "'Plus Jakarta Sans', Inter, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif" },
      "mono": { "$value": "'JetBrains Mono', 'Fira Code', 'SF Mono', Monaco, monospace" }
    },
    "fontSize": {
      "xs": { "$value": "0.75rem" },
      "sm": { "$value": "0.875rem" },
      "base": { "$value": "1rem" },
      "lg": { "$value": "1.125rem" },
      "xl": { "$value": "1.25rem" },
      "2xl": { "$value": "1.5rem" },
      "3xl": { "$value": "1.875rem" },
      "4xl": { "$value": "2.25rem" },
      "5xl": { "$value": "3rem" }
    },
    "lineHeight": {
      "tight": { "$value": "1.1" },
      "snug": { "$value": "1.2" },
      "normal": { "$value": "1.25" },
      "relaxed": { "$value": "1.3" },
      "loose": { "$value": "1.4" },
      "body": { "$value": "1.5" }
    },
    "fontWeight": {
      "regular": { "$value": "400" },
      "medium": { "$value": "500" },
      "semibold": { "$value": "600" },
      "bold": { "$value": "700" }
    }
  },

  "spacing": {
    "0": { "$value": "0" },
    "px": { "$value": "1px" },
    "0.5": { "$value": "0.125rem" },
    "1": { "$value": "0.25rem" },
    "2": { "$value": "0.5rem" },
    "3": { "$value": "0.75rem" },
    "4": { "$value": "1rem" },
    "5": { "$value": "1.25rem" },
    "6": { "$value": "1.5rem" },
    "8": { "$value": "2rem" },
    "10": { "$value": "2.5rem" },
    "12": { "$value": "3rem" },
    "16": { "$value": "4rem" },
    "20": { "$value": "5rem" },
    "24": { "$value": "6rem" }
  },

  "elevation": {
    "shadow": {
      "none": { "$value": "none" },
      "xs": { "$value": "0 1px 2px 0 rgba(44, 41, 37, 0.05)" },
      "sm": { "$value": "0 1px 3px 0 rgba(44, 41, 37, 0.1), 0 1px 2px -1px rgba(44, 41, 37, 0.1)" },
      "md": { "$value": "0 4px 6px -1px rgba(44, 41, 37, 0.1), 0 2px 4px -2px rgba(44, 41, 37, 0.1)" },
      "lg": { "$value": "0 10px 15px -3px rgba(44, 41, 37, 0.1), 0 4px 6px -4px rgba(44, 41, 37, 0.1)" },
      "xl": { "$value": "0 20px 25px -5px rgba(44, 41, 37, 0.1), 0 8px 10px -6px rgba(44, 41, 37, 0.1)" }
    },
    "radius": {
      "none": { "$value": "0" },
      "sm": { "$value": "0.25rem" },
      "md": { "$value": "0.375rem" },
      "lg": { "$value": "0.5rem" },
      "xl": { "$value": "0.75rem" },
      "2xl": { "$value": "1rem" },
      "full": { "$value": "9999px" }
    }
  },

  "motion": {
    "duration": {
      "fast": { "$value": "100ms" },
      "normal": { "$value": "200ms" },
      "slow": { "$value": "300ms" }
    },
    "easing": {
      "easeOut": { "$value": "cubic-bezier(0, 0, 0.2, 1)" },
      "easeIn": { "$value": "cubic-bezier(0.4, 0, 1, 1)" },
      "easeInOut": { "$value": "cubic-bezier(0.4, 0, 0.2, 1)" }
    }
  }
}
