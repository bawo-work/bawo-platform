{
  "$schema": "https://design-tokens.org/schema.json",
  "typography": {
    "$description": "Bawo typography system - Plus Jakarta Sans",

    "fontFamily": {
      "primary": {
        "$value": "'Plus Jakarta Sans', Inter, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
        "$description": "Primary font stack"
      },
      "mono": {
        "$value": "'JetBrains Mono', 'Fira Code', 'SF Mono', Monaco, monospace",
        "$description": "Code and metrics"
      }
    },

    "fontSize": {
      "xs": {
        "$value": "0.75rem",
        "$description": "12px - Fine print, timestamps"
      },
      "sm": {
        "$value": "0.875rem",
        "$description": "14px - Secondary text, labels"
      },
      "base": {
        "$value": "1rem",
        "$description": "16px - Body text, inputs (mobile minimum)"
      },
      "lg": {
        "$value": "1.125rem",
        "$description": "18px - Emphasized body"
      },
      "xl": {
        "$value": "1.25rem",
        "$description": "20px - Section headers"
      },
      "2xl": {
        "$value": "1.5rem",
        "$description": "24px - Page titles, earnings display"
      },
      "3xl": {
        "$value": "1.875rem",
        "$description": "30px - Hero text"
      },
      "4xl": {
        "$value": "2.25rem",
        "$description": "36px - Marketing headlines"
      },
      "5xl": {
        "$value": "3rem",
        "$description": "48px - Giant numbers (large earnings)"
      }
    },

    "lineHeight": {
      "tight": {
        "$value": "1.1",
        "$description": "Giant display text"
      },
      "snug": {
        "$value": "1.2",
        "$description": "Headlines"
      },
      "normal": {
        "$value": "1.25",
        "$description": "Large text"
      },
      "relaxed": {
        "$value": "1.3",
        "$description": "Page titles"
      },
      "loose": {
        "$value": "1.4",
        "$description": "Section headers"
      },
      "body": {
        "$value": "1.5",
        "$description": "Body text, accessibility standard"
      }
    },

    "fontWeight": {
      "regular": {
        "$value": "400",
        "$description": "Body text, descriptions"
      },
      "medium": {
        "$value": "500",
        "$description": "Emphasis within body, links"
      },
      "semibold": {
        "$value": "600",
        "$description": "Headings, buttons, labels"
      },
      "bold": {
        "$value": "700",
        "$description": "Headlines, earnings amounts"
      }
    },

    "letterSpacing": {
      "tight": {
        "$value": "-0.02em",
        "$description": "Large headlines"
      },
      "normal": {
        "$value": "0",
        "$description": "Body text"
      },
      "wide": {
        "$value": "0.01em",
        "$description": "Buttons, labels"
      }
    }
  }
}
