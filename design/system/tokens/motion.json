{
  "$schema": "https://design-tokens.org/schema.json",
  "motion": {
    "$description": "Bawo motion system - subtle, functional, not playful",

    "duration": {
      "$description": "Animation durations",
      "instant": {
        "$value": "0ms",
        "$description": "No transition"
      },
      "fast": {
        "$value": "100ms",
        "$description": "Micro-interactions, button feedback"
      },
      "normal": {
        "$value": "200ms",
        "$description": "Default transitions"
      },
      "slow": {
        "$value": "300ms",
        "$description": "Modal appearance, complex transitions"
      },
      "slower": {
        "$value": "500ms",
        "$description": "Page transitions, large animations"
      }
    },

    "easing": {
      "$description": "Easing functions",
      "linear": {
        "$value": "linear",
        "$description": "Constant speed"
      },
      "easeOut": {
        "$value": "cubic-bezier(0, 0, 0.2, 1)",
        "$description": "Deceleration - entering elements"
      },
      "easeIn": {
        "$value": "cubic-bezier(0.4, 0, 1, 1)",
        "$description": "Acceleration - exiting elements"
      },
      "easeInOut": {
        "$value": "cubic-bezier(0.4, 0, 0.2, 1)",
        "$description": "Standard transition"
      },
      "spring": {
        "$value": "cubic-bezier(0.34, 1.56, 0.64, 1)",
        "$description": "Subtle bounce - payment confirmations only"
      }
    },

    "transition": {
      "$description": "Common transition presets",
      "default": {
        "$value": "200ms cubic-bezier(0.4, 0, 0.2, 1)",
        "$description": "Standard transition"
      },
      "fast": {
        "$value": "100ms cubic-bezier(0, 0, 0.2, 1)",
        "$description": "Quick feedback"
      },
      "slow": {
        "$value": "300ms cubic-bezier(0.4, 0, 0.2, 1)",
        "$description": "Modal, overlay transitions"
      }
    },

    "animation": {
      "$description": "Predefined animations",
      "pulse": {
        "$value": "pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite",
        "$description": "Loading indicator, balance update"
      },
      "spin": {
        "$value": "spin 1s linear infinite",
        "$description": "Loading spinner"
      },
      "fadeIn": {
        "$value": "fadeIn 200ms cubic-bezier(0, 0, 0.2, 1)",
        "$description": "Element appearance"
      },
      "slideUp": {
        "$value": "slideUp 200ms cubic-bezier(0, 0, 0.2, 1)",
        "$description": "Toast notifications"
      }
    }
  }
}
