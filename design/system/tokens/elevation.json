{
  "$schema": "https://design-tokens.org/schema.json",
  "elevation": {
    "$description": "Bawo elevation system - subtle, warm shadows",

    "shadow": {
      "$description": "Box shadows with warm undertone",
      "none": {
        "$value": "none",
        "$description": "No shadow"
      },
      "xs": {
        "$value": "0 1px 2px 0 rgba(44, 41, 37, 0.05)",
        "$description": "Subtle lift for cards"
      },
      "sm": {
        "$value": "0 1px 3px 0 rgba(44, 41, 37, 0.1), 0 1px 2px -1px rgba(44, 41, 37, 0.1)",
        "$description": "Default card shadow"
      },
      "md": {
        "$value": "0 4px 6px -1px rgba(44, 41, 37, 0.1), 0 2px 4px -2px rgba(44, 41, 37, 0.1)",
        "$description": "Hover state elevation"
      },
      "lg": {
        "$value": "0 10px 15px -3px rgba(44, 41, 37, 0.1), 0 4px 6px -4px rgba(44, 41, 37, 0.1)",
        "$description": "Modal, dropdown elevation"
      },
      "xl": {
        "$value": "0 20px 25px -5px rgba(44, 41, 37, 0.1), 0 8px 10px -6px rgba(44, 41, 37, 0.1)",
        "$description": "High elevation overlays"
      }
    },

    "border": {
      "$description": "Border styles for definition",
      "default": {
        "$value": "1px solid #F0EBE3",
        "$description": "Subtle border using sand color"
      },
      "strong": {
        "$value": "1px solid #A39E94",
        "$description": "More visible border"
      },
      "focus": {
        "$value": "2px solid #1A5F5A",
        "$description": "Focus ring using primary teal"
      },
      "error": {
        "$value": "1px solid #C43A3A",
        "$description": "Error state border"
      }
    },

    "radius": {
      "$description": "Border radius scale",
      "none": {
        "$value": "0",
        "$description": "No radius"
      },
      "sm": {
        "$value": "0.25rem",
        "$description": "4px - Subtle rounding"
      },
      "md": {
        "$value": "0.375rem",
        "$description": "6px - Default radius"
      },
      "lg": {
        "$value": "0.5rem",
        "$description": "8px - Cards, containers"
      },
      "xl": {
        "$value": "0.75rem",
        "$description": "12px - Large cards"
      },
      "2xl": {
        "$value": "1rem",
        "$description": "16px - Modals"
      },
      "full": {
        "$value": "9999px",
        "$description": "Pill shape, avatars"
      }
    }
  }
}
